# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[Makefile]
indent_style = tab

[*.ts]
quote_type = single

[*.{js,py,ts,tsx,jsx}]
indent_style = space
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2
